@model EntidadesDAL.Prato

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {


            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Editar Prato</h4>
            </div>
            @Html.AntiForgeryToken()

            <div class="modal-body">
                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.PratoId)

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.RestauranteId, "RestauranteId", htmlAttributes: new { @class = "control-label col-md-2" })*@
                       
                        <div class="col-md-10">
                            <p>

                                @*<h5 class="control-label col-md-2"> Restaurante</h5>*@
                                Restaurante
                                @Html.DropDownList("RestauranteId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RestauranteId, "", new { @class = "text-danger" })
                            </p>
                        </div>
                    </div>

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.PratoNome, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        
                        <div class="col-md-10">
                            <p>
                                @*<h5 class="control-label col-md-2"> Nome</h5>*@
                                Nome
                                @Html.EditorFor(model => model.PratoNome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PratoNome, "", new { @class = "text-danger" })
                            </p>
                        </div>
                    </div>

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.PratoPreco, htmlAttributes: new { @class = "control-label col-md-2" })*@
                       
                        <div class="col-md-10">
                            <p>
                                @*<h5 class="control-label col-md-2"> Preço</h5>*@
                                Preço
                                @Html.EditorFor(model => model.PratoPreco, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PratoPreco, "", new { @class = "text-danger" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Atualizar" class="btn btn-primary" />
                        <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />

                    </div>
                </div>
            </div>

        }
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
